<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".JobDetailsActivity">


  <RelativeLayout
      android:id="@+id/number"
      android:layout_width="match_parent"
      android:layout_height="60dp">

    <RelativeLayout
        android:layout_width="25dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp">


      <ImageView
          android:id="@+id/btn_back"
          android:foreground="?android:selectableItemBackground"
          android:layout_width="20dp"
          android:layout_height="22dp"
          android:layout_centerInParent="true"
          android:background="@drawable/left_ar" />
    </RelativeLayout>

    <TextView

        android:id="@+id/tv_ride_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerInParent="true"
        android:text="#123456"
        android:textColor="@color/MidnightBlue"
        android:textSize="18sp" />

  </RelativeLayout>

  <LinearLayout
      android:id="@+id/monicatwo"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_below="@id/number"
      android:background="@color/transparent_Gray"
      android:padding="8dp"
      android:paddingTop="20dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ci_cus_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="11dp"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

      <TextView
          android:id="@+id/tv_cus_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="0dp"
          android:fontFamily="@font/poppins_bold"
          android:textColor="@color/black"
          android:textSize="20sp" />

      <LinearLayout
          android:id="@+id/rating"
          android:layout_width="wrap_content"
          android:layout_height="22dp">


        <LinearLayout

            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/rectangle_whole_curve_pink"
            android:gravity="center"
            android:orientation="horizontal">

          <ImageView
              android:layout_width="10dp"
              android:layout_height="10dp"
              android:layout_marginRight="2dp"
              android:background="@drawable/star_w" />


          <TextView
              android:id="@+id/tv_cus_rating"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:fontFamily="@font/poppins_regular"
              android:textColor="@color/white"
              android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/rwctangle_curve_orange"
            android:gravity="center"
            android:orientation="horizontal">


          <TextView
              android:id="@+id/tv_payment_mode"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableTint="@color/white"
              android:fontFamily="@font/poppins_regular"
              android:textAlignment="center"
              android:textColor="@color/white"
              android:textSize="11sp" />

        </LinearLayout>
      </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

      <TextView
          android:id="@+id/tv_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          android:fontFamily="@font/poppins_semibold"
          android:paddingLeft="8dp"
          android:paddingTop="6dp"
          android:paddingRight="15dp"
          android:paddingBottom="6dp"
          android:textColor="@color/dark_pink"
          android:textSize="15sp" />

      <TextView
          android:id="@+id/tv_distance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_amount"
          android:layout_centerInParent="true"
          android:textColor="@color/Gray"
          android:textSize="12sp" />
    </RelativeLayout>
  </LinearLayout>



  <LinearLayout
      android:id="@+id/ll_main"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/monicatwo"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="@dimen/_40sdp"
      android:orientation="horizontal"
      >

    <RelativeLayout
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
       >

      <ImageView
          android:id="@+id/iv_circle"
          android:layout_width="20dp"
          android:layout_height="20dp"

          android:src="@drawable/circle_shape" />

      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:layout_above="@+id/iv_square"
          android:layout_below="@+id/iv_circle"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center"
          android:background="#CFCCCC" />

      <ImageView
          android:id="@+id/iv_square"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_alignParentBottom="true"
          android:src="@mipmap/location_pin" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:fontFamily="@font/poppins_regular"
          android:text="PICKUP"
          android:textColor="@color/Gray"
          android:textSize="13sp" />

      <TextView
          android:id="@+id/tv_pickup_add_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:fontFamily="@font/poppins_bold"
          android:textColor="@color/MidnightBlue"
          android:textSize="15sp" />

      <TextView
          android:id="@+id/tv_pickup_add_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:fontFamily="@font/poppins_regular"
          android:textColor="@color/Gray"
          android:textSize="13sp" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_centerVertical="true"
          android:layout_marginEnd="25dp"
          android:layout_marginTop="@dimen/_10sdp"
          android:background="@color/LightGrey" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp"
          android:fontFamily="@font/poppins_regular"
          android:text="DROPOFF"
          android:textColor="@color/Gray"
          android:textSize="13sp" />

      <TextView
          android:id="@+id/tv_drop_add_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_bold"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:textColor="@color/MidnightBlue"
          android:textSize="15sp" />

      <TextView
          android:id="@+id/tv_drop_add_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_regular"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:textColor="@color/Gray"
          android:textSize="13sp" />


    </LinearLayout>

  </LinearLayout>

  <View
      android:id="@+id/viewtoo"
      android:layout_width="match_parent"
      android:layout_height="1dp"

      android:layout_centerVertical="true"
      android:layout_marginStart="30dp"
      android:layout_marginEnd="25dp"
      android:background="@color/LightGrey" />





  <TextView
      android:id="@+id/trip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/price"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:fontFamily="@font/poppins_bold"
      android:text="TRIP FARE"
      android:textColor="@color/MidnightBlue"
      android:textSize="14sp"

      />

  <RelativeLayout
      android:id="@+id/price"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/tripview">

    <TextView
        android:id="@+id/farecost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Fare cost"
        android:textColor="@color/Gray"
        android:textSize="13sp"

        />

    <TextView
        android:id="@+id/farecost_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/Gray"
        android:textSize="13sp"

        />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/farecost"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Discount"
        android:textColor="@color/Gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/discount_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/farecost_amount"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/Gray"
        android:textSize="13sp"

        />

    <TextView
        android:id="@+id/paidamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discount"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Paid amount"
        android:textColor="@color/Gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/paidamount_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discount_amount"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/Gray"
        android:textSize="13sp"

        />
  </RelativeLayout>



  <View
      android:id="@+id/tripview"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_above="@id/cmd"
      android:layout_centerVertical="true"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="20dp"
      android:background="@color/LightGrey" />

  <LinearLayout

      android:id="@+id/cmd"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_above="@id/go_to_pickup"
      android:layout_centerInParent="true"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:orientation="horizontal"
      android:weightSum="3">

    <RelativeLayout
        android:id="@+id/rl_call"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/rectangle_curve_pink"
        android:gravity="center">

      <ImageView
          android:id="@+id/call"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerInParent="true"
          android:background="@drawable/call" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/call"
          android:layout_centerHorizontal="true"
          android:fontFamily="@font/poppins_medium"
          android:text="Call"
          android:textColor="@color/white"
          android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_msg"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle_curve_blue"
        android:gravity="center">

      <ImageView
          android:id="@+id/message"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerInParent="true"
          android:background="@drawable/mess"
          android:backgroundTint="@color/white" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/message"
          android:layout_centerHorizontal="true"
          android:fontFamily="@font/poppins_medium"
          android:text="Message"
          android:textColor="@color/white"
          android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle_curve_gray"
        android:gravity="center">

      <ImageView
          android:id="@+id/delete"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerInParent="true"
          android:background="@drawable/del"
          android:backgroundTint="@color/Gray" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/delete"
          android:layout_centerHorizontal="true"
          android:fontFamily="@font/poppins_medium"
          android:text="Delete"
          android:textColor="@color/Gray"
          android:textSize="15sp" />

    </RelativeLayout>


  </LinearLayout>



    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/go_to_pickup"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/MidnightBlue"
        android:fontFamily="@font/poppins_medium"
        android:foreground="@drawable/btn_rect_ripple_effectwhite"
        android:text="Go to pickup"
        android:textColor="@color/white"
        android:textSize="14sp" />


  </RelativeLayout>



